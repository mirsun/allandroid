<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".TestTextViewActivity" >

    <TextView
        android:id="@+id/test_text_view1"
        android:textSize="16px"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view_string1" />
    
    
    <TextView
        android:id="@+id/test_text_view2"
        android:textSize="10mm"
        android:textStyle="italic"
        android:typeface="normal"
        android:textColor="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view_string2" />
    
    <TextView
        android:id="@+id/test_text_view3"
        android:textSize="24px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view_string3" />

</LinearLayout>